<div class="container">
    <div class="row">
        <div class="card footer-div card-random-beer">
            {{#each beer}}

            <img src="{{this.image_url}}" alt="image of beer" class="card-image-top">
            <h2 class="card-title">{{this.name}}</h2>
            <p class="card-text">{{this.description}}</p>
            <h3 class="card-text">{{this.tagline}}</h3>

            {{/each}}
        </div>
    </div>
</div>
